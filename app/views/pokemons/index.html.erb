<h1>Welcome to Pokedex!</h1>

  <% @pokemons.each do |pokemon| %>
      <li><%= pokemon.id %></li>
      <li><%= pokemon.name %></li>
      <li><%= pokemon.img %></li>
      <li><%= pokemon.height %></li>
      <li><%= pokemon.weight %></li>

      <td><%= link_to 'Destroy', pokemon_path(pokemon),
        method: :delete,
        data: { confirm: 'Are you sure?' } %></td>
      <br/>

  <% end %>